{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@modules/*": ["./modules", "./modules/*"],
      "@lib/*": ["./lib", "./lib/*"],
      "@config/*": ["./config", "./config/*"],
      "@/*": ["./", "./*"]
    },
    "incremental": true
  }
}
